<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/content.css">
  <title>Calculadora de Receita</title>
</head>

<header>
  <nav class="navbar navbar-expand-custom navbar-mainbg">
    <img style="margin: 26px 15px 26px 30px;" src="/styles/Logo Essential.svg" alt="essential-logo">
    <a class="navbar-brand navbar-logo" href="/">Calculadora
      de Orçamento</a>
    <button class="navbar-toggler" type="button" aria-controls="navbarSupportedContent" aria-expanded="false"
      aria-label="Toggle navigation">
      <i class="fas fa-bars text-black"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <div class="hori-selector">
          <div class="left"></div>

        </div>

        <li class="nav-item">
          <button id="home-btn" class="nav-btn">Novo Orçamento<i style="padding-left: 15px;"
              class="fa fa-upload"></i></button>
        </li>
        <li class="nav-item">
          <button id="table-btn" class="nav-btn">Tabela de Preços<i style="padding-left: 15px;"
              class="fa fa-table"></i></button>
        </li>

      </ul>
    </div>
  </nav>
</header>

<body>
  <div id="overlay" class="hidden">
    <button id="close-table-btn"><img src="/styles/close.svg" alt="close"></button>
    <div class="fade-container">
      <h2 class="table-title">Tabela de Preços</h2>
      <div class="container table-container">
        <table id="product-table">
          <tr>
            <th>Produto</th>
            <th style="font-weight: bold; text-align: right;">Unidade</th>
            <th style="text-align: right;">Valor unitário</th>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <script src="/scripts/header.js"></script>